<html lang="en"></html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View item</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="flex flex-col">
      <div class="max-w-md mx-auto bg-gray-200 p-4 rounded-lg">
        <form action="/item" method="POST" class="space-y-4">
        <div>
          <label for="user_id" class="block text-left mb-2">User ID:</label>
          <input type="text" id="user_id" name="user_id" class="border border-gray-300 p-2 w-full" required>
        </div>
        <div>
          <label for="name" class="block text-left mb-2">Name:</label>
          <input type="text" id="name" name="name" class="border border-gray-300 p-2 w-full" required>
        </div>
        <div>
          <label for="description" class="block text-left mb-2">Description:</label>
          <textarea id="description" name="description" class="border border-gray-300 p-2 w-full" required></textarea>
        </div>
        <div>
          <label for="image" class="block text-left mb-2">Image URL:</label>
          <input type="text" id="image" name="image" class="border border-gray-300 p-2 w-full">
        </div>
        <div>
          <label for="lat" class="block text-left mb-2">Latitude:</label>
          <input type="number" step="any" id="lat" name="lat" class="border border-gray-300 p-2 w-full" required>
        </div>
        <div>
          <label for="lon" class="block text-left mb-2">Longitude:</label>
          <input type="number" step="any" id="lon" name="lon" class="border border-gray-300 p-2 w-full" required>
        </div>
        <div>
          <label for="keywords" class="block text-left mb-2">Keywords (comma separated):</label>
          <input type="text" id="keywords" name="keywords" class="border border-gray-300 p-2 w-full" required>
        </div>
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Create Item</button>
      </form>

      </div>
    </div>
  </body>
</html>